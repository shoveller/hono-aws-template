{
  "name": "hello-hono-aws",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/dev.ts",
    "build": "esbuild --bundle --outfile=./dist/index.js --platform=node --target=node20 ./src/index.ts",
    "zip": "zip -j lambda.zip dist/index.js",
    "update": "aws lambda update-function-code --zip-file fileb://lambda.zip --function-name hello-hono-aws 2>&1 &",
    "lambda:cleanup": "rimraf lambda.zip dist",
    "lambda:deploy": "run-s build zip update lambda:cleanup"
  },
  "devDependencies": {
    "@hono/node-server": "^1.14.1",
    "@types/node": "^22.15.17",
    "esbuild": "^0.21.4",
    "npm-run-all2": "^6.2.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.4"
  },
  "dependencies": {
    "hono": "^4.7.9"
  }
}
