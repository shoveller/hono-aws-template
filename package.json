{
  "name": "hono-aws-template",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/dev.ts",
    "build": "esbuild --bundle --outfile=./dist/index.js --platform=node --target=node20 ./src/index.ts",
    "zip": "zip -j lambda.zip dist/index.js",
    "update": "aws lambda update-function-code --zip-file fileb://lambda.zip --function-name hello-hono-aws --region ap-northeast-2 > lambda-update.log 2>&1 & tail -f lambda-update.log",
    "lambda:cleanup": "rimraf lambda.zip dist lambda-update.log",
    "lambda:deploy": "run-s build zip update lambda:cleanup",
    "type:check": "tsc --skipLibCheck --noEmit --incremental --tsBuildInfoFile ./node_modules/.cache/tsc/tsbuildinfo",
    "prettier": "prettier --write \"**/*.{ts,tsx,cjs,mjs,json,html,css,js,jsx}\" --cache --config prettier.config.mjs",
    "eslint": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint .",
    "format": "run-s type:check prettier eslint",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@hono/node-server": "^1.14.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@types/node": "^22.15.17",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.21.4",
    "eslint": "^9.26.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "npm-run-all2": "^6.2.0",
    "prettier": "^3.5.3",
    "prettier-plugin-classnames": "^0.7.8",
    "prettier-plugin-css-order": "^2.1.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  },
  "dependencies": {
    "hono": "^4.7.9"
  }
}
